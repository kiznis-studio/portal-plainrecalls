---
export const prerender = true;
import Base from '../layouts/Base.astro';

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Terms of Use', url: '/terms' },
];
---

<Base
  title="Terms of Use | PlainRecalls"
  description="Terms and conditions for using PlainRecalls."
  breadcrumbs={breadcrumbs}
>
